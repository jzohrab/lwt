{% extends 'base.html.twig' %}

{% block title %}Text{% endblock %}

{% block body %}
    <h1>Text</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ text.ID }}</td>
            </tr>
            <tr>
                <th>LgID</th>
                <td>{{ text.LgID }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ text.Title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ text.Text }}</td>
            </tr>
            <tr>
                <th>Audio URI</th>
                <td>{{ text.AudioURI }}</td>
            </tr>
            <tr>
                <th>Source URI</th>
                <td>{{ text.SourceURI }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ text.Archived ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_text_index') }}">back to list</a>

    <a href="{{ path('app_text_edit', {'TxID': text.ID}) }}">edit</a>

    {{ include('text/_delete_form.html.twig') }}
{% endblock %}
