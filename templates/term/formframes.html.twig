{% extends 'base.html.twig' %}

{% block title %}Read{% endblock %}

{% block body %}

<div id="form-frame-left" style="width: 50%;">
  {% if not showlanguageselector %}
  <h1>Edit Term</h1>
  {% else %}
  <h1>New Term</h1>
  {% endif %}

  {{ include('term/_form.html.twig', {'button_label': 'Update'}) }}

  <a href="{{ path('app_term_index') }}">back to list</a>

  {% if not showlanguageselector %}
  {{ include('term/_delete_form.html.twig') }}
  {% endif %}

</div>


<div id="reading-frames-right" style="position: fixed; top: 0; right: 0; height: 95%; 
width: 50%;">
  <iframe name="dictframe" class="rightreadingframe" src="empty.html" scrolling="auto"
          style="height: 100%; width: 100%;" frameBorder="1">
    Frame support required.
  </iframe>
</div>

{% endblock %}
